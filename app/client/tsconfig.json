{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    /* Transpiling Options */
    "jsx": "react",
    "outDir": "../../dist/client",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "removeComments": true,
    "allowJs": true,
    "incremental": true,
    "types": ["vite/client"]
  },
  "include": ["src/**/*"]
}
